{
	"version": "0.2.0",
	"configurations": [{
		"name": "Launch Survival (Mono)",
		"type": "mono",
		"request": "launch",
		"preLaunchTask": "build (Debug)",
		"program": "${env:VINTAGE_STORY}/Vintagestory.exe",
		"args": [
			"--dataPath", "${env:VINTAGE_STORY_DATA}",
